{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["test/*"]
    }
  },
  "include": [
    "src",
    "test",
    "docs",
    "**/.vitepress/**/*.ts",
    "**/.vitepress/**/*.vue"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
